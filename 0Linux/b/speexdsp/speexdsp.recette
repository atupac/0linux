#!/usr/bin/env bash
. /usr/share/0outils/fonctions_paquets.sh

VERSION=1.2rc3
WGET=http://downloads.us.xiph.org/releases/speex/$NAMESRC-$VERSION.tar.gz
DESC="Effets pour le format Speex"

telecharger_sources
preparer_sources # À partir d'ici, on se trouve dans les sources décompactées.
cflags

# On compile les bibliothèques 32 bits pour le multilib sous x86_64 :
if [ "${PKGARCH}" = "x86_64" ]; then
	
	# On passe en 32 bits (CFLAGS, LIBDIRSUFFIX, PKGARCH et Cie) :
	cflags i686
	
	# Compilation pour i686 :
	configure_make_makeinstall
	
	# Corrige une condition parfois mal géré :
	sed -i -e "s/#define __SPEEX_TYPES_H__/#define __SPEEX_TYPES_H__\n#define HAVE_STDINT_H/" \
		$PKG/usr/include/speex/speexdsp_config_types.h
fi

# On refait la préparation des sources, il peut rester des déchets de la
# compilation en 32 bits (et make 'distclean' ne fonctionne pas toujours) :
preparer_sources
cflags

# Compilation :
configure_make_makeinstall

# Corrige une condition parfois mal géré :
sed -i -e "s/#define __SPEEX_TYPES_H__/#define __SPEEX_TYPES_H__\n#define HAVE_STDINT_H/" \
	$PKG/usr/include/speex/speexdsp_config_types.h

installer_doc
creer_post_installation
stripper
empaqueter

# C'est fini.
